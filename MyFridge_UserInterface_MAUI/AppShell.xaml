<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyFridge_UserInterface_MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyFridge_UserInterface_MAUI"
    xmlns:views="clr-namespace:MyFridge_UserInterface_MAUI.Views"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Login"
            ContentTemplate="{DataTemplate views:UserLoginPage}"
            Route="UserLoginPage" />
        <ShellContent
            Title="Information"
            ContentTemplate="{DataTemplate views:UserInfoPage}"
            Route="UserInfoPage" />
        <ShellContent
            Title="Ingredients"
            ContentTemplate="{DataTemplate views:UserIngredientPage}"
            Route="UserIngredientPage" />
        <ShellContent
            Title="Recipies"
            ContentTemplate="{DataTemplate views:RecipyPage}"
            Route="RecipyPage" />
    </FlyoutItem>
</Shell>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFridge_UserInterface_MAUI.Views.UserLoginPage"
             Title="User Login">
    <StackLayout>
        <Label Text="Welcome to MyFridge" 
               FontSize="Large" 
               HorizontalOptions="Center" 
               Margin="0,50,0,0" />
        <Entry x:Name="EmailEntry" 
               Placeholder="Email" 
               Margin="30,50,30,0" />
        <Entry x:Name="PasswordEntry" 
               Placeholder="Password" 
               IsPassword="True" 
               Margin="30,20,30,0" />
        <Button Text="Log in" 
                Clicked="OnLoginButtonClicked" 
                Margin="30,30,30,0" />
        <Label x:Name="LoginResultLabel" 
               FontSize="Medium" 
               HorizontalOptions="Center" 
               Margin="0,30,0,0" />
    </StackLayout>
</ContentPage>